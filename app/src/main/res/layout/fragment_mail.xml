<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="mailFragment"
            type="com.family.happiness.ui.home.MailFragment" />
        <variable
            name="viewModel"
            type="com.family.happiness.ui.home.MailViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.MailFragment">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:src="@drawable/mailbox_on"
                    app:visibleIf="@{viewModel.mails.size() > 0}"/>
                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:src="@drawable/mailbox_off"
                    app:visibleIf="@{viewModel.mails.size() == 0}"/>
            </FrameLayout>
            <Button
                android:id="@+id/readButtton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{"Mail: " + viewModel.mails.size()}'
                app:enabledIf="@{viewModel.mails.size() > 0}"
                tools:text="Mail: 1"
                android:onClick="@{() -> mailFragment.onClickRead()}"/>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_compose"
            android:layout_margin="16dp"
            android:onClick="@{() -> mailFragment.onClickFab()}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>