<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="wishDetailFragment"
            type="com.family.happiness.ui.wishdetail.WishDetailFragment" />
        <variable
            name="wishDetail"
            type="com.family.happiness.room.wish.WishDetail" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WishDetailFragment"
        android:padding="6dp">

        <TextView
            android:id="@+id/toTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@{wishDetail.wish.title}"
            android:padding="6dp"
            tools:text="Title"/>

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toTv"
            android:textSize="18sp"
            android:text="@{wishDetail.wish.content}"
            android:padding="6dp"
            tools:text="lorem ipsum"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/statusTv"
            android:textSize="16sp"
            android:textAlignment="textEnd"
            android:text="@{wishDetail.user.name}"
            android:padding="6dp"/>

        <TextView
            android:id="@+id/statusTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/linearLayout"
            android:textSize="16sp"
            android:textAlignment="textEnd"
            android:text="완료!"
            android:padding="6dp"
            app:visibleIf="@{wishDetail.wish.timestampClose != null}" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            app:layout_constraintBottom_toTopOf="@id/finishBt">
            <TextView
                android:id="@+id/createTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:text="@{wishDetail.wish.timestampOpen}"
                android:padding="6dp"
                tools:text="YYYY-MM-DD"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:text="~"
                app:visibleIf="@{wishDetail.wish.timestampClose != null}"
                android:padding="6dp" />

            <TextView
                android:id="@+id/finishTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:text="@{wishDetail.wish.timestampClose}"
                app:visibleIf="@{wishDetail.wish.timestampClose != null}"
                android:padding="6dp"
                tools:text="YYYY-MM-DD"/>
        </LinearLayout>

        <Button
            android:id="@+id/finishBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{wishDetail.wish.timestampClose != null? &quot;Finished&quot;: &quot;Finish&quot;}"
            android:enabled="@{wishDetail.wish.timestampClose == null}"
            android:onClick="@{() -> wishDetailFragment.onClickFinish()}"
            tools:text="Finish"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>