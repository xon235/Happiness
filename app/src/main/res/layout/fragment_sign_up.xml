<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="signUpFragment"
            type="com.family.happiness.ui.auth.SignUpFragment" />
        <variable
            name="viewModel"
            type="com.family.happiness.ui.auth.SignUpViewModel" />
        <variable
            name="oAuthData"
            type="com.family.happiness.network.request.OAuthData" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.auth.SignUpFragment">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleIf="@{!viewModel.inputEnabled}"
            android:translationZ="1dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photoImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:imageUrl="@{oAuthData.photoUrl}" />

            <EditText
                android:id="@+id/nameEditView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{oAuthData.name}"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:hint="@string/hint_name"
                android:enabled="false"/>

            <EditText
                android:id="@+id/phoneEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:textAlignment="center"
                android:hint="@string/hint_phone_number"
                app:enabledIf="@{viewModel.inputEnabled}"/>

            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:onClick="@{()->signUpFragment.onClickNext()}"
                app:enabledIf="@{viewModel.inputEnabled}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/design_default_color_secondary"
                android:text="@{viewModel.failText}" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>