<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="wish"
            type="com.family.happiness.room.Wish" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp">

        <EditText
            android:id="@+id/toTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="32sp"
            android:textStyle="bold"
            android:hint="Title"
            android:text="@{wish == null? null: wish.title}"
            tools:text="Title"/>

        <EditText
            android:id="@+id/contentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Content"
            android:gravity="top|start"
            android:minLines="8"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@id/toTv"
            android:textSize="24sp"
            android:text="@{wish.content}"
            tools:text="lorem ipsum"/>

        <TextView
            android:id="@+id/statusTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/contentTv"
            android:textSize="16sp"
            android:textAlignment="textEnd"
            android:text="Finished"
            app:goneUnless="@{wish.timestamp_finish != null}" />

        <TextView
            android:id="@+id/createTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/statusTv"
            android:textSize="16sp"
            android:textAlignment="textEnd"
            android:text="@{wish.timestamp_create}"
            tools:text="YYYY-MM-DD"/>

        <TextView
            android:id="@+id/finishTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/createTv"
            android:textSize="16sp"
            android:textAlignment="textEnd"
            android:text="@{wish.timestamp_finish}"
            app:goneUnless="@{wish.timestamp_finish != null}"
            tools:text="YYYY-MM-DD"/>

        <Button
            android:id="@+id/finishBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{wish== null? &quot;Post&quot;: &quot;Update&quot;}"
            tools:text="Post"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>