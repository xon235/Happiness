<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp">

        <TextView
            android:id="@+id/toTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="@+id/toTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toTv"
            app:layout_constraintTop_toTopOf="@+id/toTv" />


        <EditText
            android:id="@+id/contentTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:minLines="8"
            android:hint="Content"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/toTv"
            app:layout_constraintBottom_toTopOf="@id/sendBt"/>

        <Button
            android:id="@+id/sendBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>