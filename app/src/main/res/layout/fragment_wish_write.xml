<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="wishWriteFragment"
            type="com.family.happiness.ui.wishnwrite.WishWriteFragment" />
        <variable
            name="viewModel"
            type="com.family.happiness.ui.wishnwrite.WishWriteViewModel" />
        <variable
            name="wishDetail"
            type="com.family.happiness.room.wish.WishDetail" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:visibleIf="@{!viewModel.inputEnabled}" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            app:enabledIf="@{viewModel.inputEnabled}">

            <EditText
                android:id="@+id/titleEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:hint="Title"
                android:text="@{wishDetail.wish.title}"
                tools:text="Title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/contentEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:hint="Content"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:text="@{wishDetail.wish.content}"
                tools:text="lorem ipsum"
                android:paddingBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/linearLayout"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:text='@{"Written by " + wishDetail.user.name}'
                tools:text="Written By Author"
                app:visibleIf="@{wishDetail != null}"
                android:paddingBottom="6dp"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingBottom="6dp"
                app:visibleIf="@{wishDetail != null}">
                <TextView
                    android:id="@+id/createTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    android:text="@{wishDetail.wish.timestampOpen}"
                    tools:text="YYYY-MM-DD"/>
            </LinearLayout>


            <Button
                android:id="@+id/finishBt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text='@{wishDetail == null? "Post": "Update"}'
                android:onClick="@{() -> wishWriteFragment.onClickFinish()}"
                tools:text="Update"/>
        </LinearLayout>
    </FrameLayout>
</layout>